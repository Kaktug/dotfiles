syntax enable
set tabstop=4
set softtabstop=4
set expandtab
set ai  " auto indent new lines
set si  " smart indent new lines
set wrap    "wrap lines
set number	"add line numbers
set cursorline	"add line under cursor for easy location
set showmatch	" highlight matching [{()}]
set ignorecase  "ignore case when searching
set smartcase   "try smart detection of casing when searching
set hlsearch    "highlight search results
set incsearch
